{
    "manifest_version": 2,
    "name": "EXTweet",
    "short_name": "EXTweet",
    "version": "1.0",
    "description": "Twitterの共有を簡単にするChrome拡張",
    "icons": {
        "16": "16.png",
        "48": "48.png",
        "128": "128.png"
    },

    "background": {
		"scripts": ["bg.js"]
    },
    
	"browser_action": {
		"default_icon": "19.png",
		"default_title": "共有する"
    },

    "permissions": [
        "contextMenus",
		"tabs",
		"background",
		"http://*/*",
		"https://*/*"
	]
}